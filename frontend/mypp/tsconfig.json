{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "es6",
      "es2017"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "types": ["node", "@types/react", "@types/react-dom", "@types/redux-persist"],
    "strictNullChecks": false,
    "noImplicitAny": false,
    "baseUrl": "src"
  },
  "include": ["src", "src/components/icons/**/*.ts"],
  "exclude": ["node_modules", "build"]
}